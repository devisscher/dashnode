extends layout

block content
  h1= title
  p Welcome to #{title}            
  table
    if directories
      for directory in directories
        tr
          td #{directory}
          td 
            a(href="/appstart/#{directory}") start
          td 
            a(href="/appstop/#{directory}") stop
    if results
      div= results
      for result in results
        p= result.pid